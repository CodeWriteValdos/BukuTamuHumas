<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity"
    android:background="@color/textIcon"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/ToolbarProfile"
            app:titleTextColor="@color/textIcon"
            >
            <TextView
                android:textColor="@color/textIcon"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil yang di temukan"
                android:textAlignment="center"
                />
        </android.support.v7.widget.Toolbar>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/colorPrimaryDark"
            >
            <br.com.felix.imagezoom.ImageZoom
                android:id="@+id/resultFoto"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <!--<ImageView-->
                <!--android:id="@+id/resultFoto"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--/>-->
            <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--android:layout_marginTop="40dp"-->
                <!--android:layout_width="140dp"-->
                <!--android:layout_height="140dp"-->
                <!--android:src="@drawable/userdefault"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:id="@+id/resultFoto"-->
                <!--/>-->
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:fontFamily="@font/open_sans_semibold"
                android:text="Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"/>
            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"></View>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Siswa"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:id="@+id/resultNama"
                android:text="ResultNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rombel"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:id="@+id/resultRombel"
                android:text="ResultRombel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"/>
            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"></View>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rayon"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:id="@+id/resultRayon"
                android:text="ResultRayon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"/>
            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee">
            </View>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >
            <Button
                android:id="@+id/btnBack"
                android:layout_alignParentBottom="true"
                android:textColor="@color/textIcon"
                android:background="@color/colorPrimaryDark"
                android:text="Kembali"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>